// Import libraries
const { Client, GatewayIntentBits } = require('discord.js');
require('dotenv').config(); // Load environment variables from .env

// Create a new client instance
const client = new Client({
    intents: [
        GatewayIntentBits.Guilds, // Required to interact with servers
        GatewayIntentBits.GuildMessages, // For messageCreate event
        GatewayIntentBits.MessageContent, // To read message content
    ],
});

// Event: Bot is ready
client.once('ready', () => {
    console.log(`Bot is online! Logged in as ${client.user.tag}`);
});

// Event: Message created
client.on('messageCreate', (message) => {
    // Ignore messages from the bot itself
    if (message.author.bot) return;

    // Simple command: Respond to "!ping"
    if (message.content === '!ping') {
        message.reply('Pong!');
    }

    // Command: Respond to "!hello"
    if (message.content === '!hello') {
        message.channel.send(`Hello, ${message.author.username}!`);
    }
});

// Login to Discord with token from .env
client.login(process.env.DISCORD_TOKEN);
